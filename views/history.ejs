<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MediConnect - Pending Requests</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="style.css">
</head>
<body>

  <style>


/* General Body Styles */
body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f7fa;
}

/* Header Styling */
header {
    background-color: #2b2b2b;
    color: white;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header .logo {
    font-size: 24px;
    font-weight: bold;
    color: #fff;
}

header .navbar ul {
    list-style: none;
    display: flex;
    gap: 20px;
}

header .navbar ul li {
    font-size: 18px;
}

header .navbar ul li a {
    text-decoration: none;
    color: white;
    transition: color 0.3s;
}

header .navbar ul li a:hover {
    color: #ffb400;
}

header .newheader {
    display: none;
}

#menubtn {
    display: none;
}

@media (max-width: 768px) {
    header .navbar {
        display: none;
    }
    header .newheader {
        display: block;
    }
    #menubtn {
        display: block;
    }
    .menu {
        display: none;
    }
}

/* Pending Requests Container */
.container {
    max-width: 1200px;
    margin: 30px auto;
    padding: 20px;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
}

.pending-requests {
    padding: 20px;
    text-align: center;
}

.pending-requests h2 {
    font-size: 32px;
    color: #333;
    margin-bottom: 30px;
}

/* Request Card Styling */
.request {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
    align-items: center;
    padding: 15px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

.request:hover {
    transform: translateY(-5px);
    transition: transform 0.2s ease;
}

.profile-pic {
    background-color: #ffb400;
    color: white;
    font-size: 28px;
    border-radius: 50%;
    padding: 20px;
    width: 70px;
    height: 70px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.request-info {
    flex-grow: 1;
    margin-left: 20px;
    text-align: left;
}

.request-info h3 {
    font-size: 24px;
    color: #333;
}

.request-info p {
    font-size: 16px;
    color: #777;
}

.bbold {
    font-weight: bold;
    color: #333;
}

/* Menu & Mobile Responsiveness */
.menu {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.menu h3 a {
    text-decoration: none;
    color: #333;
    font-size: 20px;
    padding: 10px;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.menu h3 a:hover {
    background-color: #ffb400;
}

/* Icons and Buttons */
i {
    font-size: 24px;
}

/* Menu Toggle */
#menubtn {
    font-size: 28px;
    cursor: pointer;
    color: #fff;
}

/* Animations */
@keyframes slideIn {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(0);
    }
}

.menu {
    animation: slideIn 0.5s ease-out;
}

  </style>

<!-- Navbar (consistent with reviews page) -->
<header class="header">
    <div class="logo">YOUR LOGO</div>
    <nav class="navbar">
        <ul>
            <li><a href="/doctor/dhome">Home</a></li>
            <li><a href="#" style="border-bottom: 2px solid #2b2b2b; padding-bottom: 10px;">History</a></li>
            <li><a href="/doctor/dhome/reviews">Reviews</a></li>
            <li><a href="/doctor/dhome/profile"><i class='bx bx-user-circle'></i></a></li>
        </ul>
    </nav>
    <div class="newheader">
        <div class="nav">
            <div class="logoimg">YOUR LOGO</div>
            <div id="menubtn">
                <i class="ri-menu-line"></i>
            </div>
        </div>
        <div class="menu">
            <i class="ri-close-line"></i>
            <h3><a href="/doctor/dhome">Home</a></h3>
            <h3><a href="#" style="border-bottom: 2px solid #2b2b2b; padding-bottom: 10px;">History</a></h3>
            <h3><a href="/doctor/dhome/reviews">Reviews</a></h3>
            <h3><a href="/doctor/dhome/profile">Profile</a></h3>
        </div>
    </div>
</header>

<!-- Pending Requests Section -->
<div class="container">
    <div class="pending-requests">
        <h2>Pending Requests</h2>

        <!-- Looping through patient data -->
        <% patient.forEach(function(patient) { %>
        <div class="request">
            <div class="profile-pic">
                <i class="fas fa-user"></i>
            </div>
            <div class="request-info">
                <h3><%= patient.patientname %></h3>
                <p><span class="bbold">Condition:</span> <%= patient.condition %></p>
                <p><span class="bbold"><%= patient.date %></span></p>
            </div>
        </div>
        <% }); %>

    </div>
</div>

<!-- External Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

<script>
    // Mobile Menu Toggle
    document.getElementById('menubtn').addEventListener('click', () => {
        document.querySelector('.menu').classList.toggle('active');
    });
</script>

</body>
</html>
